<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jogging"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/jogtxtListHeading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="#ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="Paired devices appear below"
        android:textColor="#800080"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/joglstDevices"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:shadowColor="#ffff00"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:textColor="#ffa500"
        android:textSize="20sp"
        android:textStyle="bold" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/jogbtnSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:background="@drawable/custom_newmenu"
            android:text="Search for paired devices"
            android:textColor="#ffffff"
          
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/jogbtnConnect"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/custom_newmenu"
            android:enabled="false"
            android:text="Connect"
            android:textColor="#ffffff"
            
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

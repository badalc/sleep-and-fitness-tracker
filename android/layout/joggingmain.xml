<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/jogcaloriestv1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:shadowColor="#ffff00"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            android:text="Calories Burned:"
            android:textColor="#6afb92"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jogcaloriestv2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.97"
            android:shadowColor="#ffff00"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            android:text=""
            android:textColor="#70dbdb"
            android:textSize="30sp"
            android:textStyle="bold" >
        </TextView>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/jogstepstv1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:shadowColor="#ffff00"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            android:text="Steps :"
            android:textColor="#6afb92"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jogstepstv2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:shadowColor="#ffff00"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            android:text=""
            android:textColor="#6afb92"
            android:textSize="30sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="318dp"
     android:orientation="vertical" >

     <Button
         android:id="@+id/jogbtnstart"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:textColor="#ffffff"
         android:text="START" 
         android:background="@drawable/custom_button2"/>


     <Button
         android:id="@+id/jogbtnstop"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         
         android:text="STOP"
         android:background="@drawable/custom_button2"
          android:textColor="#ffffff" />

 </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <DigitalClock
            android:id="@+id/digitalClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="DigitalClock"
            android:textColor="#6afb92"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>
    

</LinearLayout>

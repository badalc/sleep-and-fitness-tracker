<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Sleep and Fitness Tracker"
        android:textColor="#000099"
        android:textSize="30dp" />

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="6dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bed"
            android:orientation="vertical" >

            <Button
                android:id="@+id/newMenuBtn1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:background="@drawable/custom_newmenu1"
                android:text="Sleep"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:color="#66FF00" 
                 android:textSize="30sp"
                 android:layout_marginTop="380dp"
               
                />
"
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fitness"
            android:orientation="vertical" >

            <Button
                android:id="@+id/newMenuBtn2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:background="@drawable/custom_newmenu"
                android:text="Fitness"
                android:textAlignment="center"
                android:color="#66FF00"
                 android:textColor="#ffffff"
                 android:textSize="30sp" />
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>
